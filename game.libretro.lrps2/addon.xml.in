<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.lrps2"
		name="Sony - PlayStation 2 (PCSX2)"
		version="1.7.0.1"
		provider-name="PCSX2 Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>elf|iso|ciso|chd|cso|cue|bin|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPL</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.lrps2</source>
		<summary lang="en_GB">LRPS2</summary>
		<description lang="en_GB">LRPS2 is a hard fork of PCSX2 that targets only Libretro specifically.</description>
	</extension>
</addon>
